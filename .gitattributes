# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts should always use LF
*.sh text eol=lf

# PHP files should use LF
*.php text eol=lf

# Blade templates should use LF
*.blade.php text eol=lf

# JavaScript files should use LF
*.js text eol=lf
*.ts text eol=lf
*.jsx text eol=lf
*.tsx text eol=lf
*.vue text eol=lf

# CSS files should use LF
*.css text eol=lf
*.scss text eol=lf

# Config files should use LF
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.env text eol=lf

# Markdown files should use LF
*.md text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
