# ==========================================================================
# DEVELOPMENT Environment Configuration
# ==========================================================================
# For PRODUCTION settings, see .env.production.example
# NEVER commit .env file to version control!
# ==========================================================================

APP_NAME=XMANStudio
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=th
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=th_TH

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

# ==========================================================================
# Logging
# ==========================================================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ==========================================================================
# Database
# ==========================================================================
DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

# ==========================================================================
# Session
# ==========================================================================
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# ==========================================================================
# Cache & Queue
# ==========================================================================
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
CACHE_STORE=file

# ==========================================================================
# Redis (optional)
# ==========================================================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ==========================================================================
# Mail
# ==========================================================================
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ==========================================================================
# Payment Configuration
# ==========================================================================
PROMPTPAY_NUMBER=0812345678
KBANK_ACCOUNT_NUMBER=XXX-X-XXXXX-X
SCB_ACCOUNT_NUMBER=XXX-X-XXXXX-X
BANK_ACCOUNT_NAME=XMANStudio

# ==========================================================================
# Admin Credentials (Development only - change for production!)
# ==========================================================================
ADMIN_PASSWORD=Admin@Dev123!
SUPER_ADMIN_EMAIL=superadmin@xmanstudio.com
SUPER_ADMIN_PASSWORD=SuperAdmin@Dev123!

# ==========================================================================
# Pusher / Broadcasting (for real-time sync)
# ==========================================================================
BROADCAST_CONNECTION=pusher
PUSHER_APP_ID=your_pusher_app_id
PUSHER_APP_KEY=your_pusher_app_key
PUSHER_APP_SECRET=your_pusher_app_secret
PUSHER_APP_CLUSTER=ap1

# ==========================================================================
# Firebase / FCM (for push notifications)
# ==========================================================================
FIREBASE_CREDENTIALS=storage/app/firebase/service-account.json
FIREBASE_PROJECT_ID=your-firebase-project-id

# ==========================================================================
# SMS Checker Configuration
# ==========================================================================
SMSCHECKER_TIMESTAMP_TOLERANCE=300
SMSCHECKER_AMOUNT_EXPIRY=30
SMSCHECKER_MAX_PENDING=99
SMSCHECKER_RATE_LIMIT=120
SMSCHECKER_DEFAULT_APPROVAL_MODE=auto
SMSCHECKER_LINE_ON_MATCH=true
SMSCHECKER_FCM_ON_MATCH=true
SMSCHECKER_FCM_ON_NEW_ORDER=true
SMSCHECKER_WEBSOCKET_ENABLED=true
SMSCHECKER_ORPHAN_RETENTION_DAYS=7
SMSCHECKER_ORPHAN_MATCH_WINDOW=60

# ==========================================================================
# Vite
# ==========================================================================
VITE_APP_NAME="${APP_NAME}"
