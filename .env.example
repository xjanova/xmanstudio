# ==========================================================================
# DEVELOPMENT Environment Configuration
# ==========================================================================
# For PRODUCTION settings, see .env.production.example
# NEVER commit .env file to version control!
# ==========================================================================

APP_NAME=XMANStudio
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=th
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=th_TH

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

# ==========================================================================
# Logging
# ==========================================================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ==========================================================================
# Database
# ==========================================================================
DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

# ==========================================================================
# Session
# ==========================================================================
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# ==========================================================================
# Cache & Queue
# ==========================================================================
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
CACHE_STORE=file

# ==========================================================================
# Redis (optional)
# ==========================================================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ==========================================================================
# Mail
# ==========================================================================
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ==========================================================================
# Payment Configuration
# ==========================================================================
PROMPTPAY_NUMBER=0812345678
KBANK_ACCOUNT_NUMBER=XXX-X-XXXXX-X
SCB_ACCOUNT_NUMBER=XXX-X-XXXXX-X
BANK_ACCOUNT_NAME=XMANStudio

# ==========================================================================
# Admin Credentials (Development only - change for production!)
# ==========================================================================
ADMIN_PASSWORD=Admin@Dev123!
SUPER_ADMIN_EMAIL=superadmin@xmanstudio.com
SUPER_ADMIN_PASSWORD=SuperAdmin@Dev123!

# ==========================================================================
# Vite
# ==========================================================================
VITE_APP_NAME="${APP_NAME}"
