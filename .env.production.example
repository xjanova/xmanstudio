# ==========================================================================
# PRODUCTION Environment Configuration
# ==========================================================================
# IMPORTANT: Copy this file to .env and update with your production values
# NEVER commit .env file to version control!
# ==========================================================================

APP_NAME=XMANStudio
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.com

APP_LOCALE=th
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=th_TH

APP_MAINTENANCE_DRIVER=file

# Security: Use higher bcrypt rounds in production
BCRYPT_ROUNDS=12

# ==========================================================================
# Logging - Use daily rotation in production
# ==========================================================================
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ==========================================================================
# Database - Use MySQL/PostgreSQL in production
# ==========================================================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=xmanstudio
DB_USERNAME=
DB_PASSWORD=

# ==========================================================================
# Session - Enable encryption and use secure cookies
# ==========================================================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# ==========================================================================
# Cache & Queue - Use Redis for better performance
# ==========================================================================
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
CACHE_STORE=database

# Optional: Use Redis for better performance
# CACHE_STORE=redis
# QUEUE_CONNECTION=redis
# SESSION_DRIVER=redis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# ==========================================================================
# Mail - Configure your mail provider
# ==========================================================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# ==========================================================================
# Payment Configuration
# ==========================================================================
PROMPTPAY_NUMBER=
KBANK_ACCOUNT_NUMBER=
SCB_ACCOUNT_NUMBER=
BANK_ACCOUNT_NAME=

# Credit Card (if enabled)
CARD_PAYMENT_ENABLED=false
CARD_GATEWAY=omise
CARD_PUBLIC_KEY=
CARD_SECRET_KEY=

# ==========================================================================
# Admin Credentials (CHANGE THESE!)
# ==========================================================================
ADMIN_PASSWORD=
SUPER_ADMIN_EMAIL=
SUPER_ADMIN_PASSWORD=

# ==========================================================================
# Vite
# ==========================================================================
VITE_APP_NAME="${APP_NAME}"
